<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/header_img"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/header_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/header_img"
        android:layout_alignRight="@+id/header_img"
        android:background="@color/black_translate"
        android:fontFamily="@font/font_family_second"
        android:gravity="start"
        android:lineSpacingExtra="5dp"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="49dp"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:textColor="@color/white"
        android:textSize="14sp" />

</RelativeLayout>