<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    tools:background="#ccc">

    <TextView
        android:id="@+id/tv_tag_jianjie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:text="简介:"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_jianjie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="20dp"
        android:textColor="@color/white"
        tools:text="垃圾的发丝的服务了就发神经递阿德斯公司的理念gasvaisdgjiasgoahsdgjsah" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="20dp"
        android:text="相关作者:"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="20dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_other_writer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_no_others_tips_writer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="没有找到相关作者"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="24sp" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="20dp"
        android:text="相关作品:"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="20dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_no_others_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="没有找到相关作品"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="24sp" />
    </FrameLayout>
</LinearLayout>